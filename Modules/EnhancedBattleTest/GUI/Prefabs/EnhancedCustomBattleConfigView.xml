              </Children>
            </Widget>
			
            <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "CoverChildren" MarginTop="10">
              <Children>
                <TextWidget Text="player soldier count" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="CoverChildren" />
                <EditableTextWidget Text="@PlayerSoldierCount" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="30" MarginLeft="300" />
              </Children>
            </Widget>
            <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "CoverChildren" MarginTop="10">
              <Children>
                <TextWidget Text="enemy sodier count" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="CoverChildren" />
                <EditableTextWidget Text="@EnemySoldierCount" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="30" MarginLeft="300" />
              </Children>
            </Widget>
            <!-- <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "CoverChildren" MarginTop="10">
              <Children>
                <TextWidget Text="soldier x interval" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="CoverChildren" />
                <EditableTextWidget Text="@SoldierXInterval" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="30" MarginLeft="300" />
              </Children>
            </Widget>
            <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "CoverChildren" MarginTop="10">
              <Children>
                <TextWidget Text="soldier y interval" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="CoverChildren" />
                <EditableTextWidget Text="@SoldierYInterval" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="30" MarginLeft="300" />
              </Children>
            </Widget> -->
            <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "Fixed" SuggestedHeight="50" MarginTop="10">
              <Children>
                <TextWidget Text="player character" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="StretchToParent" VerticalAlignment="Center" />
                <ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="50" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="Popup.Done.Button" MarginLeft="300" Command.Click="SelectPlayerCharacter">
                  <Children>
                    <TextWidget Text="@PlayerName" HeightSizePolicy="StretchToParent" WidthSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="Popup.Button.Text" Brush.FontSize="20"/>
                  </Children>
                </ButtonWidget>
              </Children>
            </Widget>
            <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "Fixed" SuggestedHeight="50" MarginTop="10">
              <Children>
                <TextWidget Text="player soldier character" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="StretchToParent" VerticalAlignment="Center" />
                <ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="50" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="Popup.Done.Button" MarginLeft="300" Command.Click="SelectPlayerTroopCharacter">
