          </Children>
        </Widget>
        <ListPanel LayoutImp.LayoutMethod="VerticalBottomToTop" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" VerticalAlignment="Top" HorizontalAlignment="Center" SuggestedWidth="600" MarginTop="150">
          <Children>
		        <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "CoverChildren" MarginTop="10">
			        <Children>
                <ButtonWidget Id="MapDown" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="29" SuggestedHeight="32" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="Creation.NumericLeftArrow" Command.Click="PreviousMap" />
                <Widget Id="TextContainer" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="500" SuggestedHeight="34" HorizontalAlignment="Center" VerticalAlignment="Center">
                  <Children>
				            <TextWidget Text="@SelectedMapName" WidthSizePolicy="Fixed" SuggestedWidth="500" HeightSizePolicy="CoverChildren" />
                  </Children>
                </Widget>
                <ButtonWidget Id="MapUp" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="29" SuggestedHeight="32" HorizontalAlignment="Right" VerticalAlignment="Center" Brush="Creation.NumericRightArrow" Command.Click="NextMap" />
              </Children>
		        </Widget>
			      <Widget WidthSizePolicy = "StretchToParent" HeightSizePolicy = "CoverChildren" MarginTop="10">
              <Children>
                <TextWidget Text="Sky Brightness" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="CoverChildren" />
