                <TextWidget Text="enemy soldier character" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="StretchToParent" VerticalAlignment="Center" />
                <ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" SuggestedWidth="300" HeightSizePolicy="Fixed" SuggestedHeight="50" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="Popup.Done.Button" MarginLeft="300" Command.Click="SelectEnemyTroopCharacter">
